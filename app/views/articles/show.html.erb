<div class="row justify-content-center">
  <div class="col-6 mt-5">
    <h2><%= @article.title %></h2>
    <p>-
      <% rand(5..20).times do %>
        <%= @article.content %>
      <% end %>
      </p>
    <%= link_to "Back to Articles", articles_path %>
    <%= link_to "Edit the Article", edit_article_path(@article) %>
    <%= link_to "Delete the Article", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
